<%- include('partials/header.ejs') %>

  <body>
    <%- include('partials/navbar.ejs') %>

      <div class="container">
        <hr>
        <h1>
          <%= pergunta.titulo %>
        </h1>
        <p>
          <%= pergunta.descricao %>
        </p>
        <hr>
        <form method="POST" action="/responder">
          <h3>Responda</h3>
          <label for="corpo" class="mb-1">Resposta</label>
          <textarea placeholder="Digite sua resposta" class="form-control mb-4" name="corpo"></textarea>
          <input name="pergunta" value="<%= pergunta.id %>" type="hidden">
          <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta=> {%>
          <div class="card pt-2">
            <div class="card-body">
              <p>
                <%= resposta.corpo %>
              </p>
            </div>
          </div>
          <br>
          <%})%>
      </div>

  </body>
  <%- include('partials/footer.ejs') %>